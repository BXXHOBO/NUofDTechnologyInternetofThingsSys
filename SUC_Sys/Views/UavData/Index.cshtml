<script>
    $(function () {
        gridList();

    })

    function gridList() {
        var $gridList = $("#gridList");
        //操作栏按钮
        var buttonFormatter = function (value, grid, rows, state) {

            g = "<button onclick=\"btn_edit('" + rows.UavDataId + "' )\" >修改</button>";
            h = "<button onclick=\"btn_delete('" + rows.UavDataId + "')\">删除</button>";
            return g + h;
        }

        $gridList.dataGrid({
            url: "/UavData/GetGridJson",
            //height: $(window).height() - 128,
            height: "100%",
            width: "100%",
            colNames: ['主键', '无人机序列号', '工作状态','图片', '出厂日期', '创建时间', '创建人', '更新时间', '更新人', '备注', '操作'],
            colModel: [
                { name: 'UavDataId', index: 'UavDataId', width: 55, hidden: true },
                { name: 'UavSerialNO', index: 'UavSerialNO', width: 90, align: 'left' },
                { name: 'WorkState', index: 'WorkState', width: 90, align: 'left', formatter: 'select', editoptions: { value: "0:巡检;1:空闲;2:故障" } },
                {
                    name: "ImgPath", index: "ImgPath", width: 280, editable: true, sortable: true
                    , formatter: function (cellvalue, options, rowObject) {
                        imgid = rowObject.ImgPath;
                        if (cellvalue == null) {
                            cellvalue = "";
                        }
                        else {
                            cellvalue = cellvalue.replace("~/", "../../");
                        }

                       // var temp = " <img id='" + imgid + "' src='" + cellvalue + "' border='0' height='30px' onmouseover='imgPop(this)'   onmouseout='imgDispear(this)' />";
                        var temp = " <img id='" + imgid + "' src='" + cellvalue + "' border='0' height='30px'  />";
                        //temp = temp + "<div class='popup'><img src='" + cellvalue + "' id='" + imgid + "Child' class='child'></img></div>";
                        return temp;
                    }
                },
                {
                    name: 'ProductDate', index: 'ProductDate', width: 120,
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H-i:s', newformat: 'Y-m-d H-i:s' }
                },
                {
                    name: 'Rec_CreateTime', index: 'Rec_CreateTime', width: 80, align: "left",
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H-i:s', newformat: 'Y-m-d H-i:s' }
                },
                { name: 'Rec_CreateBy', index: 'Rec_CreateBy', width: 80, align: "left" },
                {
                    name: 'Rec_ModifyTime', index: 'Rec_ModifyTime', width: 80, align: "left",
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H-i:s', newformat: 'Y-m-d H-i:s' }
                },
                { name: 'Rec_ModifyBy', index: 'Rec_ModifyBy', width: 150, sortable: false },
                { name: 'Remark', index: 'Remark', width: 150, sortable: false },
                {
                    name: 'myac', index: '', width: 110, fixed: true, sortable: false, resize: false,
                    formatter: buttonFormatter

                }
            ],
            
            altRows: true,
            rowList: [10, 20, 30],
            pager: "#gridPager",
            sortname: 'UavDataId asc,Rec_CreateTime desc,Rec_ModifyTime desc',
            viewrecords: true
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增信息",
            url: "/UavData/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit(id) {
        //var keyValue = $("#gridList").jqGridRowValue().UavDataId;
        var keyValue = id;
        
        
        $.modalOpen({
            id: "Form",
            title: "修改信息",
            url: "/UavData/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete(id) {
       

        $.ajax({
            url: "/UavData/DeleteForm",
            data: { keyValue:id},
            dataType: "json",
            type: "POST",
            success: function (data) {
                console.log(data.message);
                if (data.state == "success") {
                    $.modalMsg(data.message, data.state);
                    //alert(data.ResultValue);
                    //$.currentWindow().$("#gridList").trigger("reloadGrid");
                    window.location.reload();

                } else {
                    $.modalAlert(data.message, data.state);
                }
                
            }
        });


        //$.deleteForm({
        //    url: "/UavData/DeleteForm",
        //    param: { keyValue: $("#gridList").jqGridRowValue().UavDataId },
        //    success: function () {
        //        $.currentWindow().$("#gridList").trigger("reloadGrid");
        //    }
        //})
    }

    function uavrtc() {
        window.open("/UavRTCMonitor/Index");
    }
    function imgPop(tag) {
        var currentId = tag.id;
        $("#" + tag.id + "Child").css("display", "block");
    }

    function imgDispear(tag) {
        var currentId = tag.id;
        $("#" + tag.id + "Child").css("display", "none");
    }
    function clacImgZoomParam(maxWidth, maxHeight, width, height) {
        var param = { top: 0, left: 0, width: width, height: height };
        if (width > maxWidth || height > maxHeight) {
            rateWidth = width / maxWidth;
            rateHeight = height / maxHeight;
            if (rateWidth > rateHeight) {
                param.width = maxWidth;
                param.height = Math.round(height / rateWidth);
            } else {
                param.width = Math.round(width / rateHeight);
                param.height = maxHeight;
            }
        }
        param.left = Math.round((maxWidth - param.width) / 2);
        param.top = Math.round((maxHeight - param.height) / 2);
        return param;
    }
</script>

