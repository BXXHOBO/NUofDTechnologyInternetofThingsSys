
@{
    ViewBag.Title = "无人机架次信息编辑";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");

    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/UavSortieData/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);

                }
            });
        }
    });

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/UavSortieData/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                // 刷新父页面
                window.parent.location.reload();

            }
        })
    }



</script>


<form id="form1" class="form-horizontal" method="post">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">无人机架次信息</a></li>
        </ul>

        <div style="padding-top: 20px; margin-right: 30px;">
            <div class="row-fluid">
                <div class="span8">
                    <fieldset>

                        <div class="control-group formSep">
                            <div class="formTitle">无人机序列号</div>
                            <div class="formValue">
                                <input id="UavSerialNO" name="UavSerialNO" type="text" class="form-control required" placeholder="请输入无人机序列号" />
                            </div>
                        </div>

                        <div class="control-group formSep">
                            <div class="formTitle">架次</div>
                            <div class="formValue">
                                <input id="Sortie" name="Sortie" type="text" class="form-control required" placeholder="请输入架次" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">实时视频地址</div>
                            <div class="formValue">
                                <input id="VideoAddr" name="VideoAddr" type="text" class="form-control required" placeholder="请输入实时视频地址" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">状态</div>
                            <div class="formValue">
                                <input id="UavState" name="UavState" type="text" class="form-control required" placeholder="请输入架次" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">历史视频地址</div>
                            <div class="formValue">
                                <input id="HistoryAddr" name="HistoryAddr" type="text" class="form-control required" placeholder="请输入历史视频地址" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">开始时间</div>
                            <div class="formValue">
                                <input id="InitialOperTime" name="InitialOperTime" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss'})" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">结束时间</div>
                            <div class="formValue">
                                <input id="OperationEndTime" name="OperationEndTime" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss'})" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">作业地点</div>
                            <div class="formValue">
                                <input id="OperateAddr" name="OperateAddr" type="text" class="form-control required" placeholder="请输入作业地点" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">工作内容</div>
                            <div class="formValue">
                                <input id="WorkContents" name="WorkContents" type="text" class="form-control required" placeholder="请输入工作内容" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <label for="remark" class="control-label">
                                备注
                            </label>
                            <div class="controls">
                                <textarea rows="4" name="Remark" id="Remark" class="input-xlarge" maxlength="200"></textarea>
                                <span class="help-block">最多输入200字</span>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</form>
