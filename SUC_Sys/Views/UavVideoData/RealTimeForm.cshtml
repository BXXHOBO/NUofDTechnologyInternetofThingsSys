        //根据架次信息获取经纬度信息
        function theFlight() {
            var Sortie = $("#sortie").val();
            $.ajax({
                url: "/Baidu/GetSortiePointData?sortienum=" + Sortie,
                dataType: 'json',
                type: "Post",
                success: function (data) {
                    if (data.IsSuccess) {
                        if (data.ResultValue != null) {
                            $.each(data.ResultValue, function (index, element) {
                                var myIcon2 = new BMap.Icon("/assets/images/Baidu/RedPoint.png", new BMap.Size(18, 14));//这个是你要显示坐标的图片的相对路径
                                var ggPoint = new BMap.Point(element.Longitude, element.Latitude);
                                var marker2 = new BMap.Marker(ggPoint, { icon: myIcon2 });
                                map.addOverlay(marker2);

                            });
                        }
                    }
                }
            });
        }

        function GetllDataAll() {
            var UavSerialNO = $("#uavSerialNO").val();
            var Sortie = $("#sortie").val();
            var opts = {
                width: 0, // 信息窗口宽度
                height: 0, // 信息窗口高度
                title: "飞行信息", // 信息窗口标题
                enableMessage: true, //设置允许信息窗发送短息
                message: ""
            }
            $.ajax({
                url: "/UavCloud/GetUavUandSInfoGet",
                dataType: 'json',
                data: { "UavSerialNO": UavSerialNO, "Sortie": Sortie },
                type: "GET",
                async: true,
                success: function (data) {
                    $("#longitude").html(data.ResultValue.Longitude);
                    $("#latitude").html(data.ResultValue.Latitude);
                    //$("#sortie").html(data.ResultValue.Sortie);
                    //$("#uavSerialNO").html(data.ResultValue.UavSerialNO);
                    $("#height").html(data.ResultValue.Altitude);
                    $("#temperature").html(data.ResultValue.Temperature);
                    $("#humidity").html(data.ResultValue.Humidity);
                    var dataInfo = getFDate(data.ResultValue.Rec_CreateTime)
                    $("#createtime").html(dataInfo);

                    //map.clearOverlays();
                    var new_point4 = new BMap.Point(data.ResultValue.Longitude, data.ResultValue.Latitude);
                    var myIcon4 = new BMap.Icon("/Content/img/Baidu/RedPoint2.png", new BMap.Size(18, 14));//这个是你要显示坐标的图片的相对路径
                    var marker4 = new BMap.Marker(new_point4, { icon: myIcon4 });  // 创建标注
                    map.addOverlay(marker4);
                    //      // 将标注添加到地图中
                    map.panTo(new_point4);
                    //var infoWindow = new BMap.InfoWindow("高度:" + data.ResultValue.Altitude + "<br>经度:" + data.ResultValue.Longitude + "<br>纬度:" + data.ResultValue.Latitude, opts); // 创建信息窗口对象
                    //map.openInfoWindow(infoWindow, new_point4); //开启信息窗口
                }
            });
        }

        function toggleFullScreen() {
            if (!document.fullscreenElement && // alternative standard method
                !document.mozFullScreenElement && !document.webkitFullscreenElement) {// current working methods
                if (document.documentElement.requestFullscreen) {
                    document.documentElement.requestFullscreen();
                } else if (document.documentElement.mozRequestFullScreen) {
                    document.documentElement.mozRequestFullScreen();
                } else if (document.documentElement.webkitRequestFullscreen) {
                    document.documentElement.webkitRequestFullscreen(Element.ALLOW_KEYBOARD_INPUT);
                }
            } else {
                if (document.cancelFullScreen) {
                    document.cancelFullScreen();
                } else if (document.mozCancelFullScreen) {
                    document.mozCancelFullScreen();
                } else if (document.webkitCancelFullScreen) {
                    document.webkitCancelFullScreen();
                }
            }
        }




        function getFDate(date) {
            var d = eval('new ' + date.substr(1, date.length - 2));
            var ar_date = [d.getFullYear(), d.getMonth() + 1, d.getDate()];
            var ar_time = [d.getHours(), d.getMinutes(), d.getSeconds()];
            for (var i = 0; i < ar_date.length; i++) ar_date[i] = dFormat(ar_date[i]);
            for (var i = 0; i < ar_time.length; i++) ar_time[i] = dFormat(ar_time[i]);
            return ar_date.join('-') + ' ' + ar_time.join(':');
        }
        function dFormat(i) {
            return i < 10 ? "0" + i.toString() : i;
        }



