
@{
    ViewBag.Title = "无人机数据信息编辑";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");

    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/UavInfo/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);

                }
            });
        }
    });

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/UavInfo/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                // 刷新父页面
                window.parent.location.reload();

            }
        })
    }



</script>


<form id="form1" class="form-horizontal" method="post">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">无人机飞行信息</a></li>
        </ul>

        <div style="padding-top: 20px; margin-right: 30px;">
            <div class="row-fluid">
                <div class="span8">
                    <fieldset>

                        <div class="control-group formSep">
                            <div class="formTitle">无人机序列号</div>
                            <div class="formValue">
                                <input id="UavSerialNO" name="UavSerialNO" type="text" class="form-control required" placeholder="请输入无人机序列号" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">作业日期时间</div>
                            <div class="formValue">
                                <input id="OperationDate" name="OperationDate" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss'})" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">架次</div>
                            <div class="formValue">
                                <input id="Sortie" name="Sortie" type="text" class="form-control required" placeholder="请输入架次" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">无人机视频地址</div>
                            <div class="formValue">
                                <input id="VideoAddr" name="VideoAddr" type="text" class="form-control required" placeholder="请输入无人机视频地址" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">经度</div>
                            <div class="formValue">
                                <input id="Longitude" name="Longitude" type="text" class="form-control required" placeholder="请输入经度值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">纬度</div>
                            <div class="formValue">
                                <input id="Latitude" name="Latitude" type="text" class="form-control required" placeholder="请输入纬度值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">高度(m)</div>
                            <div class="formValue">
                                <input id="Altitude" name="Altitude" type="text" class="form-control required" placeholder="请输入高度值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">温度(℃)</div>
                            <div class="formValue">
                                <input id="Temperature" name="Temperature" type="text" class="form-control required" placeholder="请输入温度值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">湿度(%RH)</div>
                            <div class="formValue">
                                <input id="Humidity" name="Humidity" type="text" class="form-control required" placeholder="请输入湿度值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">速度(m/s)</div>
                            <div class="formValue">
                                <input id="Speed" name="Speed" type="text" class="form-control required" placeholder="请输入速度值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <div class="formTitle">气压(Pa)</div>
                            <div class="formValue">
                                <input id="AtmosPressure" name="AtmosPressure" type="text" class="form-control required" placeholder="请输入气压值" />
                            </div>
                        </div>
                        <div class="control-group formSep">
                            <label for="remark" class="control-label">
                                备注
                            </label>
                            <div class="controls">
                                <textarea rows="4" name="Remark" id="Remark" class="input-xlarge" maxlength="200"></textarea>
                                <span class="help-block">最多输入200字</span>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</form>
